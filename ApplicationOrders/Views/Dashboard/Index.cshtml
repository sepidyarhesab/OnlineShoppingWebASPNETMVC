@using OrdersOrders.Repository.Orders
@{
    ViewBag.Title = "حساب کاربری";
    Layout = "~/Views/Layouts/_MainLayouts.cshtml";
}

@{
    Session["BackUrl"] = "/Default";
}


@{
    if (User.Identity.IsAuthenticated)
    {
    <div class="page-content-wrapper py-3" id="elementsSearchList">
        <div class="container direction-rtl" dir="rtl">

            @{



                var phone = "0";

                var idd = User.Identity.Name;

                var results = RepAccountDashboard.RepAccountDashboardInformation(Guid.Parse(idd));



                if (results.Count > 0)
                {
                    foreach (var item in results)
                    {

                        phone = item.Phone;

                        <div class="card user-info-card mb-3">
                            <div class="card-body d-flex align-items-center">
                                <div class="user-profile" style="margin-left: 1rem !important;">
                                    <img src="~/Static/Content/Icons/account_100px.png" alt="pencil"/><i class="bi bi-pencil"></i>
                                </div>
                                <div class="user-info">
                                    <div class="d-flex align-items-center">
                                        <h5 class="mb-1">@item.Name @item.Family</h5>
                                    </div>
                                    <p class="mb-0">@item.Phone</p>
                                </div>
                            </div>
                        </div>
                    }
                }
            }

            <div class="affan-element-item">
                <div class="element-heading-wrapper">
                    <i class="bi bi-list" style="margin-left: 1rem; margin-right: 0rem !important; "></i>
                    <div class="heading-text">
                        <h6 class="mb-1">داشبورد</h6>
                    </div>
                </div>
            </div>
            <!-- Page Item --><a class="affan-element-item" href="/Dashboard/EditProfile" dir="rtl">ویرایش پروفایل<i class="bi bi-chevron-left i-marg"></i></a>
            <!-- Page Item --><a class="affan-element-item" href="/Dashboard/Factor">سفارشات<i class="bi bi-chevron-left i-marg"></i></a>
            <!-- Page Item --><a class="affan-element-item" href="/Dashboard/ChangePassword">تغییر رمز عبور<i class="bi bi-chevron-left i-marg"></i></a>
            <!-- Page Item --><a class="affan-element-item" href="/Login/SingOut">خروج<i class="bi bi-chevron-left i-marg"></i></a>

        </div>
    </div>       
    }
}

