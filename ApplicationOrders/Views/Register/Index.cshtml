
@{
    ViewBag.Title = "ثبت نام";
    Layout = "~/Views/Layouts/_MainLayouts.cshtml";
}

<div class="py-3">
<!-- Pagination -->
<div class="shop-pagination pb-3">
    <div class="container" dir="rtl">
        
                <div class="d-flex align-items-center justify-content-between" dir="rtl">
                    <div class="page-heading">
                        <h5 class="mb-0" >@ViewBag.Title</h5>
                    </div>

        </div>
    </div>
</div>
</div>
        
    <div class="custom-container" >
        
        <div class="text-center px-4">
            
            <img class="login-intro-img" src="/Helper/Layouts/img/bg-img/36.png" alt="login-intro-img">
        </div>
        <!-- Register Form -->
        <div class="register-form mt-4" dir="rtl">
            @using (Html.BeginForm("SubmitRegister", "Register", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group text-start mb-3">
                    <input class="form-control" id="name" name="name" type="text" placeholder="نام">
                </div>
                <div class="form-group text-start mb-3">
                    <input class="form-control" id="family" name="family" type="text" placeholder=" نام خانوادگی">
                </div>
                <div class="form-group text-start mb-3">
                    <input class="form-control" id="phone" name="phone" type="text" placeholder="شماره موبایل">
                    <p class="help-block mt-2" dir="rtl">شماره موبایل برای ورود نام کاربری شما محسوب می شود.</p>
                </div>
                <div class="form-group text-start mb-3 position-relative">
                    <input class="form-control" id="psw-input" type="text" placeholder="رمز عبور">
                    <div class="position-absolute" id="password-visibility"></div>
                </div>
                <div class="mb-3" id="pswmeter"></div>
                <div class="form-check mb-3" dir="rtl">
                    <input class="form-check-input" id="checkedCheckbox" type="checkbox" value="" style="float: right; margin-left: 0.5em;" checked>
                    <label class="form-check-label text-muted fw-normal" for="checkedCheckbox">با قوانین و ضوابط موافق هستم.</label>
                </div>
                <button class="btn btn-primary w-100" type="submit">ثبت نام</button>

            }
        </div>
        <!-- Login Meta -->
        <div class="login-meta-data text-center">
            <p class="mt-3 mb-0">حساب کاربری دارید؟ <a class="stretched-link" href="/Login">ورود</a></p>
        </div>
    </div>
      
