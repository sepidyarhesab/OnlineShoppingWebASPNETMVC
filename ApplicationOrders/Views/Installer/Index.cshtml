@using System.Web.Configuration
@using OrdersGeneral.Repository.General

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Affan - PWA Mobile HTML Template">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="theme-color" content="#0134d4">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    @{
    string Title = WebConfigurationManager.AppSettings["CompanyName"];
    <title>@Title</title>
    }
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
    <!-- Favicon -->
    <link rel="icon" href="/Helper/Layouts/img/core-img/favicon.ico">
    <link rel="apple-touch-icon" href="/Helper/Layouts/img/icons/icon-96x96.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/Helper/Layouts/img/icons/icon-152x152.png">
    <link rel="apple-touch-icon" sizes="167x167" href="/Helper/Layouts/img/icons/icon-167x167.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/Helper/Layouts/img/icons/icon-180x180.png">
    <!-- CSS Libraries -->
    <link href="~/Helper/Layouts/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/Helper/Layouts/css/bootstrap-icons.css">
    <link href="~/Helper/Layouts/css/tiny-slider.css" rel="stylesheet" />
    <link rel="stylesheet" href="/Helper/Layouts/css/baguetteBox.min.css">
    <link rel="stylesheet" href="/Helper/Layouts/css/rangeslider.css">
    <link rel="stylesheet" href="/Helper/Layouts/css/vanilla-dataTables.min.css">
    <link rel="stylesheet" href="/Helper/Layouts/css/apexcharts.css">
    <!-- Core Stylesheet -->
    <link rel="stylesheet" href="/Helper/Layouts/style.css">
    <link href="~/Helper/Layouts/style.css" rel="stylesheet" />
    <!-- Web App Manifest -->
    <link rel="manifest" href="/Helper/Layouts/manifest.json">
    <style>
        .form-group {
            display: flex
        }
    </style>


</head>
<body>
    <div class="page-content-wrapper py-3">
        <div class="container">
            <!-- Element Heading -->
            <div class="element-heading">
                <h5>ثبت اطلاعات سایت</h5>
            </div>
        </div>
        <div class="container" dir="rtl">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("Generate", "Installer", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group">
                            <input class="form-control" type="text" id="Name" name="Name" placeholder="نام را وارد کنید">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" id="Family" name="Family" placeholder="نام خانوادگی را وارد کنید">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" id="NationalCode" name="NationalCode" placeholder="کدملی را وارد کنید">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" id="PrimaryTitle" name="PrimaryTitle" placeholder="نام سایت را وارد کنید">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" id="SecondaryTitle" name="SecondaryTitle" placeholder="هزینه پست را وارد کنید">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" id="Phone" name="Phone" placeholder="شماره تماس را وارد کنید">
                        </div>
                        <div class="form-group">
                            
                            <input class="form-control" type="email" id="Email" name="Email" placeholder="ایمیل را وارد کنید">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" id="Whatsapp" name="Whatsapp" placeholder=" واتساپ را وارد کنید">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" id="Telegram" name="Telegram" placeholder="تلگرام را وارد کنید">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" id="Aparat" name="Aparat" placeholder="آپارات را وارد کنید">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" id="Facebook" name="Facebook" placeholder="فیسبوک را وارد کنید">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" id="Twitter" name="Twitter" placeholder="توییتر را وارد کنید">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" id="Instagram" name="Instagram" placeholder="اینستاگرام را وارد کنید">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control text-box single-line" id="Note" name="Note" rows="6" placeholder="توضیحات را وارد کنید"></textarea>
                        </div>
                        <button class="btn btn-primary w-100 d-flex align-items-center justify-content-center" type="submit">
                            ارسال
                        </button>
                    }


                </div>
            </div>
        </div>
    </div>
</body>
</html>


