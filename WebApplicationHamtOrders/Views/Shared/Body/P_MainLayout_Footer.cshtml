@using OrdersGeneral.Repository.General
@using OrdersInventory.Repository.Inventory
@using OrdersSettings.Repository.Settings



<div class="row mb-3">
    <div class="col-md-4 col-sm-6">
        <div class="widget widget-links">
            <h2 class="widget-title">اطلاعات تماس</h2>
            @{
                var query = Repfooter.RepInformationFooter();
                if (query.Count > 0)
                {
                    <ul class="widget-list">

                        @{
                            foreach (var item in query)
                            {
                                <li class="widget-list-item">
                                    <a href="#" class="widget-list-link">@item.PrimaryTitle</a>
                                </li>
                                <li class="widget-list-item">
                                    <a href="#" class="widget-list-link">@item.Address</a>
                                </li>
                                <li class="widget-list-item">
                                    <a href="tel:@item.Phone" class="widget-list-link">@item.Phone</a>
                                </li>
                                <li class="widget-list-item">
                                    <a href="mailto: @item.Email" class="widget-list-link">@item.Email</a>
                                </li>
                            }
                        }

                    </ul>
                }
            }
        </div>
    </div>
    <div class="col-md-4 col-sm-6">
        <div class="widget widget-links">
            <h2 class="widget-title">لینک های پرکاربرد</h2>
            <ul class="widget-list">
                @{
                    var link = RepLinks.RepositoryLinks();
                    if (link.Count > 0)
                    {
                        foreach (var items in link)
                        {
                            <li class="widget-list-item">
                            <a href="@items.Url" class="widget-list-link">@items.PrimaryTitle</a>
                            </li>
                        }
                    }

                }


            </ul>
        </div>
