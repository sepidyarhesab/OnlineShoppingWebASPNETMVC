@using OrdersGeneral.Repository.General
<!-- Header -->
<header class="main-header sticky">
    <a href="#menu" class="btn-mobile">
        <div class="hamburger hamburger--spin" id="hamburger">
            <div class="hamburger-box">
                <div class="hamburger-inner"></div>
            </div>
        </div>
    </a>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-6">
                <ul id="menuIcons">
                    <li><a href="/Default" target="_blank"><i class="icon icon-support"></i></a></li>
                    <li ><a href="/Orders" target="_blank">
                        <i class="icon icon-shopping-cart2"></i>
                    </a><span id="shopcarts"></span></li>
                </ul>

            </div>
            <div class="col-lg-9 col-6">
                <div id="logo">
                    <h1><a href="/Default" title="Costy">فروشگاه اینترنتی</a></h1>
                </div>
                <!-- Menu -->
                <nav id="menu" class="main-menu" dir="rtl">
                    <ul>

                        @{
                            var menu = RepMenu.RepositoryMainMenu();
                            if (menu.Count > 0)
                            {
                                foreach (var itemMenu in menu)
                                {
                                    <li>
                                        <span>
                                            <a href="@itemMenu.Url">
                                                <i class="@itemMenu.Icon"></i>
                                                @itemMenu.PrimaryTitle
                                            </a>
                                        </span>
                                    </li>
                                }
                            }
                        }





                    </ul>
                </nav>
                <!-- Menu End -->

            </div>
        </div>
    </div>
</header>
<!-- Header End -->
