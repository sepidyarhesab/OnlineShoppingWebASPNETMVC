
@{
    ViewBag.Title = "افزودن لینک جدید|AddNewLink";
    Layout = "~/Views/Layouts/_AdminLayouts.cshtml";
}


<section class="content-header">
    <h2>داشبورد</h2>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-lg-12 connectedSortable">
                <div class="box box-info">
                    @using (Html.BeginForm("Generate", "LinksManagement", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-header">
                            <i class="fa fa-link"></i>
                            <h3 class="box-title">افزودن لینک جدید</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-horizontal">


                                <div class="form-group">
                                    <label class="control-label col-md-2" for="PrimaryTitle">عنوان اول</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="PrimaryTitle" name="PrimaryTitle" placeholder="عنوان اول" type="text" value="" onfocusout="checkinputlinks()"/>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                    <label class="control-label col-md-2" for="SecondaryTitle">عنوان دوم</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="SecondaryTitle" name="SecondaryTitle" placeholder="عنوان دوم" type="text" value="" onfocusout="checkinputlinks()"/>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="Sort">شماره مرتب سازی</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="Sort" name="Sort" placeholder="شماره مرتب سازی" type="number" onkeypress="return isNumberKey(event)" value="" pattern="\D"  onfocusout="checkinputlinks()"/>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                    <label class="control-label col-md-2" for="Url">لینک</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="Url" name="Url" placeholder="لینک" type="text" value="" onfocusout="checkinputlinks()"/>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="IsOk">وضعیت</label>
                                    <div class="col-md-4">
                                        <select class="form-control" id="IsOk" name="IsOk" onfocusout="checkinputlinks()" >
                                            <option selected="selected" value="1">فعال</option>
                                            <option value="0">غیر فعال</option>

                                        </select>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Section" data-valmsg-replace="true"></span>
                                    </div>
   
                                </div>
                            </div>
                        </div>
                        <div class="box-footer clearfix">
                            <div class="col-md-12 col-md-offset-9">
                                <button type="submit" class="btn btn-labeled bg-green-active" id="Submit"> <i class="fa fa-check-square"></i> ذخیره</button>
                                <button type="submit" class="btn btn-labeled bg-red-active"> <i class="fa fa-close"></i> بازگشت</button>
                            </div>
                        </div>
                    }

                </div>
            </div>


        </div>
    </div>
</section>
<script>
    function checkinputlinks() {
        var _PrimaryTitle = document.getElementById("PrimaryTitle");
        var _SecondaryTitle = document.getElementById("SecondaryTitle");
        var _Sort = document.getElementById("Sort");
        var _IsOk = document.getElementById("IsOk");
        var _Url = document.getElementById("Url");
        var _submit = document.getElementById("Submit");
        if (_PrimaryTitle.value.length === 0) {
            iziToast.error({
                title: name + ' عنوان اول را وارد کنید ',
                rtl: true,
                position: 'topLeft'
            });
            _PrimaryTitle.style.borderColor = "red";
            _submit.disabled = true;
        } else {
            _PrimaryTitle.style.borderColor = "green";
            _submit.disabled = false;
            if (_SecondaryTitle.value.length === 0) {
                iziToast.error({
                    title: name + ' عنوان دوم را وارد کنید ',
                    rtl: true,
                    position: 'topLeft'
                });
                _SecondaryTitle.style.borderColor = "red";
                _submit.disabled = true;
            } else {
                _SecondaryTitle.style.borderColor = "green";
                _submit.disabled = false;
            }
            if (_IsOk.value.length === 0) {
                iziToast.error({
                    title: name + ' وضعیت را وارد کنید ',
                    rtl: true,
                    position: 'topLeft'
                });
                _IsOk.style.borderColor = "red";
                _submit.disabled = true;
            } else {
                _IsOk.style.borderColor = "green";
                _submit.disabled = false;
            }
            if (_Url.value.length === 0) {
                iziToast.error({
                    title: name + ' لینک را وارد کنید ',
                    rtl: true,
                    position: 'topLeft'
                });
                _Url.style.borderColor = "red";
                _submit.disabled = true;
            } else {
                _Url.style.borderColor = "green";
                _submit.disabled = false;
            }
            if (_Sort.value.length === 0) {
                iziToast.error({
                    title: name + ' شماره مرتب سازی را وارد کنید ',
                    rtl: true,
                    position: 'topLeft'
                });
                _Sort.style.borderColor = "red";
                _submit.disabled = true;
            } else {
                _Sort.style.borderColor = "green";
                _submit.disabled = false;
            }

        }

    }
</script>



