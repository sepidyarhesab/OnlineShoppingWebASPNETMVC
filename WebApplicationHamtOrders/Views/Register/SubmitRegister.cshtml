@model IEnumerable<OrdersGeneral.ViewModels.General.VMUser.VMUsers>
@{
    ViewBag.Title = "ثبت نام|Register";
    Layout = "~/Views/Layouts/_MainLayouts.cshtml";
}

<div class="page-header">
    <div class="page-header__container container">
        <div class="page-header__breadcrumb">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">

                        <svg class="breadcrumb-arrow" width="6px" height="9px">
                            <use xlink:href="images/sprite.svg#arrow-rounded-right-6x9"></use>
                        </svg>
                    </li>


                </ol>
            </nav>
        </div>

    </div>
</div>
<div class="block">
    <div class="container">
        <div class="card mb-0">
            <div class="card-body contact-us">
                <div class="contact-us__container">
                    <div class="row">
                        <div class="col-12 col-lg-12">
                            <h4 class="contact-us__header card-title">ثبت نام</h4>
                            @using (Html.BeginForm("SubmitRegister", "Register", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="form-name">نام : </label>
                                        <input type="text" id="form-name" class="form-control" placeholder="نام :">
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label for="form-email">نام خانوادگی: </label>
                                        <input type="email" id="form-email" class="form-control" placeholder="نام خانوادگی: " dir="ltr">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="form-name">کدملی </label>
                                        <input type="text" id="form-name" class="form-control" placeholder="کدملی">
                                    </div>

                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-9">
                                        <button type="submit" class="btn btn-primary btn-block">ذخیره</button>

                                    </div>
                                    <div class="form-group col-md-3">
                                        <button type="submit" class="btn btn-primary btn-block">بازگشت</button>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
