
@{
    ViewBag.Title = "افزودن ویژگی جدید|AddNewProperty";
    Layout = "~/Views/Layouts/_AdminLayouts.cshtml";
}

<section class="content-header">
    <h2>داشبورد</h2>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-lg-12 connectedSortable">
                <div class="box box-info">
                    @using (Html.BeginForm("GenerateProperty", "ProductManagment", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-header">
                            <i class="fa fa-envelope"></i>
                            <h3 class="box-title">افزودن ویژگی جدید</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-horizontal">

                                @{

                                    if (Session["PropertyId"] != null)
                                    {
                                        var id = Session["PropertyId"].ToString();
                                        <input class="form-control text-box single-line" id="Id" name="Id" placeholder=" " type="hidden" value="@id" />

                                    }



                                }



                                <div class="form-group">
                                    <label class="control-label col-md-2" for="Title">کلید</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="Key" name="Key" placeholder="کلید" type="text" value="" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                    <label class="control-label col-md-2" for="Title">مقدار</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="Value" name="Value" placeholder="مقدار" type="text" value="" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>


                                </div>
                            </div>
                        </div>
                        <div class="box-footer clearfix">
                            <div class="col-md-12 col-md-offset-9">
                                <button type="submit" class="btn btn-labeled bg-green-active"> <i class="fa fa-check-square"></i> ذخیره</button>
                                <a href="/ProductManagment/Property/@Session["PropertyId"]" class="btn btn-labeled bg-red-active"> <i class="fa fa-close"></i> بازگشت</a>
                            </div>
                        </div>
                    }

                </div>


                
            </div>
        </div>
    </div>
</section>

