
@{
    ViewBag.Title = "تماس با ما|ContactUs";
    Layout = "~/Views/Layouts/_MainLayouts.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="section-title mb-2">
            تماس با ما
        </div>
    </div>
    <div class="col-12">
        <div class="shadow-around p-3 mb-5">
            @{
                using (Html.BeginForm("GenerateContactUs", "ContactUs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-12 mb-3">
                            <p class="text-muted text-sm">
                                برای پیگیری یا سوال درباره سفارش و ارسال پیام بهتر است
                                از فرم زیر استفاده کنید.
                            </p>
                        </div>
                        <div class="col-md-6">
                            <div class="form-element-row">
                                <label class="label-element">موضوع*</label>
                                <select name="Objects" id="Objects" class="select2">
                                    <option value="select">--انتخاب موضوع--</option>
                                    <option value="Offer">پیشنهاد</option>
                                    <option value="Complaint">انتقاد یا شکایات</option>
                                    <option value="Pursuit">پیگیری سفارش</option>
                                    <option value="Service">خدمات پس از فروش</option>
                                    <option value="Management">مدیریت</option>
                                    <option value="Others">سایر موضوعات</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-element-row">
                                <label class="label-element">نام و نام خانوادگی*</label>
                                <input type="text" id="Name" name="Name" class="input-element" placeholder="نام و نام خانوادگی">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-element-row">
                                <label class="label-element">ایمیل*</label>
                                <input type="email" name="Email" id="Email" class="input-element dir-ltr" placeholder="example@example.com">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-element-row">
                                <label class="label-element">تلفن تماس*</label>
                                <input type="tel" name="Phone" id="Phone" class="input-element dir-ltr" placeholder="09xxxxxxxxx">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-element-row">
                                <label class="label-element">پیام*</label>
                                <textarea name="Note" id="Note" cols="30" rows="10" class="input-element"></textarea>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-element-row text-left">
                                <button class="btn-element btn-info-element" type="submit">
                                    ثبت و ارسال
                                    <i class="fad fa-money-check-edit mr-2"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="section-title mb-2">
            تعطیلات همتا
        </div>
    </div>
    <div class="col-12">
        <div class="shadow-around p-3">
            <ul class="d-flex flex-wrap justify-content-center">
                <li class="shadow-around text-center px-2 py-3 m-2 w-120">
                    <strong class="d-block h1">۱۳</strong>
                    <span class="d-block mb-2">فروردین</span>
                    <hr>
                    <span class="d-block mt-2">روز طبیعت</span>
                </li>
                <li class="shadow-around text-center px-2 py-3 m-2 w-120">
                    <strong class="d-block h1">۱۰</strong>
                    <span class="d-block mb-2">مرداد</span>
                    <hr>
                    <span class="d-block mt-2">عيد سعيد قربان</span>
                </li>
                <li class="shadow-around text-center px-2 py-3 m-2 w-120">
                    <strong class="d-block h1">۲۹</strong>
                    <span class="d-block mb-2">اسفند</span>
                    <hr>
                    <span class="d-block mt-2">روز ملي شدن صنعت نفت ايران</span>
                </li>
            </ul>
        </div>
    </div>
</div>

