@{
    ViewBag.Title = "افزودن تنظیمات جدید|AddNewSettings";
    Layout = "~/Views/Layouts/_AdminLayouts.cshtml";
}


<section class="content-header">
    <h2>داشبورد</h2>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-lg-12 connectedSortable">
                <div class="box box-info">
                    @using (Html.BeginForm("Generate" ,  "SettingsManagement", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-header">
                            <i class="fa fa-envelope"></i>
                            <h3 class="box-title">افزودن تنظیمات جدید</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-horizontal">


                                <div class="form-group">
                                    <label class="control-label col-md-2" for="Row">ردیف</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="Row" name="Row" placeholder="Row " type="number" value="" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                    <label class="control-label col-md-2" for="PrimaryTitle">کد</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="Code" name="Code" placeholder="Code" type="number" value="" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>





                                    <div class="form-group">
                                        <label class="control-label col-md-2" for="PrimaryTitle">عنوان اول</label>
                                        <div class="col-md-4">
                                            <input class="form-control text-box single-line" id="PrimaryTitle" name="PrimaryTitle" placeholder="عنوان اصلی" type="text" value="" />
                                            <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                        </div>

                                        <label class="control-label col-md-2" for="SecondaryTitle">عنوان دوم</label>
                                        <div class="col-md-4">
                                            <input class="form-control text-box single-line" id="SecondaryTitle" name="SecondaryTitle" placeholder="عنوان اصلی" type="text" value="" />
                                            <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-2" for="Email">ایمیل</label>
                                            <div class="col-md-4">
                                                <input class="form-control text-box single-line" id="Email" name="Email" placeholder="ایمیل" type="text" value="" />
                                                <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                            </div>
                                            <label class="control-label col-md-2" for="phone">تلفن</label>
                                            <div class="col-md-4">
                                                <input class="form-control text-box single-line" id="phone" name="phone" placeholder="تلفن" type="text" value="" />
                                                <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-2" for="telegram">تلگرام</label>
                                                <div class="col-md-4">
                                                    <input class="form-control text-box single-line" id="telegram" name="telegram" placeholder="تلگرام" type="text" value="" />
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                </div>
                                                <label class="control-label col-md-2" for="Instagram">اینستاگرام</label>
                                                <div class="col-md-4">
                                                    <input class="form-control text-box single-line" id="Instagram" name="Instagram" placeholder="اینستاگرام" type="text" value="" />
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-2" for="Whatsupp">واتساپ</label>
                                                <div class="col-md-4">
                                                    <input class="form-control text-box single-line" id="Whatsupp" name="Instagram" placeholder="واتساپ" type="text" value="" />
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                </div>
                                            </div>
                                            <label class="control-label col-md-2" for="Facebook">فیسبوک</label>
                                            <div class="col-md-4">
                                                <input class="form-control text-box single-line" id="Facebook" name="Facebook" placeholder="فیسبوک" type="text" value="" />
                                                <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-2" for="Facebook">آپارات</label>
                                                <div class="col-md-4">
                                                    <input class="form-control text-box single-line" id="Aparat" name="Aparat" placeholder="آپارات" type="text" value="" />
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>


                                                </div>

                                                <label class="control-label col-md-2" for="Sort">شماره مرتب سازی</label>
                                                <div class="col-md-4">
                                                    <input class="form-control text-box single-line" id="Sort" name="Sort" placeholder="عنوان اصلی" type="text" value="" />
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-2" for="Url">لینک</label>
                                                    <div class="col-md-4">
                                                        <input class="form-control text-box single-line" id="Url" name="Url" placeholder="عنوان اصلی" type="text" value="" />
                                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                    </div>
                                                </div>


                                                <label class="control-label col-md-2" for="Title">وضعیت</label>
                                                <div class="col-md-4">
                                                    <select class="form-control" id="IsOk" name="IsOk">
                                                        <option selected="selected" value="1">فعال</option>
                                                        <option value="0">غیر فعال</option>

                                                    </select>
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Section" data-valmsg-replace="true"></span>
                                                </div>

                                            </div>
                                        </div>


                                        <div class="box-footer clearfix">
                                            <div class="col-md-12 col-md-offset-9">
                                                <button type="submit" class="btn btn-labeled bg-green-active"> <i class="fa fa-check-square"></i> ذخیره</button>
                                                <button type="submit" class="btn btn-labeled bg-red-active"> <i class="fa fa-close"></i> بازگشت</button>
                                            </div>
                                        </div>
                                        }

                                    </div>
                                </div>


                            </div>
                        </div>
                    }

                </div>
            </div>


        </div>
    </div>
</section>



