@using OrdersGeneral.Repository.General

<!-- .block-slideshow -->


<div class="row d-none d-sm-block">
    <div class="col-12 mb-3">
        <div class="banner">
            @{
                var resultts = RepBanner.RepositoryMainTopBanner();
                if (resultts.Count > 0)
                {
                    foreach (var item in resultts)
                    {
                        <a href="@item.Url">
                            <img src="@item.FileNameDesktop" alt="@item.PrimaryTitle">
                        </a>
                    }
                }
            }
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-8 ml-lg-0 mb-3">
        <div class="block-slideshow__body">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @{
                        var result = RepSliders.RepositoryMainSliders();
                        if (result.Count > 0)
                        {
                            int row = 0;
                            foreach (var item in result)
                            {
                                if (row == 0)
                                {
                                    <div class="carousel-item active">
                                        <a href="@item.Url" target="_blank"> <img style="border-radius: 20px;" class="d-block w-100" src="@item.FileNameDesktop" alt="@item.PrimaryTitle"></a>
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item ">
                                        <a href="@item.Url" target="_blank"> <img style="border-radius: 20px;" class="d-block w-100" src="@item.FileNameDesktop" alt="@item.PrimaryTitle"></a>
                                    </div>
                                }

                                row++;
                            }
                        }
                    }


                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

            </div>
        </div>

        <script>
                        $('.carousel').carousel({
                            interval: 2000
                        })
        </script>

    </div>
    <div class="col-lg-4">
        <div class="row">
            @{
                var results = RepBanner.RepositoryMainBannerBS();
                if (results.Count > 0)
                {
                    foreach (var item in results)
                    {
                        <div class="col-lg-12 col-sm-6 col-12">
                            <div class="banner mb-3">
                                <a href="@item.Url">
                                    <img src="@item.FileNameDesktop" alt="@item.PrimaryTitle">
                                </a>
                            </div>
                        </div>
                    }
                }
            }
            

        </div>
    </div>
</div>