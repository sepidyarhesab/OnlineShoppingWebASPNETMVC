@using OrdersInventory.Repository.Inventory


@{
    ViewBag.Title = "افزودن موجودی|AddInventory";
    Layout = "~/Views/Layouts/_AdminLayouts.cshtml";
}


<section class="content-header">
    <h2>داشبورد</h2>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-lg-12 connectedSortable">
                <div class="box box-info">
                    @using (Html.BeginForm("Generate", "ProductPropertyList", FormMethod.Post))
                    {
                        var rep = new RepProducts();

                        @Html.AntiForgeryToken()
                        <div class="box-header">
                            <i class="fa fa-envelope"></i>
                            <h3 class="box-title">اضافه کردن موجودی</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-horizontal">

                                <div class="form-group">
                                    <label class="control-label col-md-2" for="Code">کد</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" disabled="disabled" id="Code" name="Code" placeholder="کد" type="text" value="" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>



                                    <label class="control-label col-md-2" for="ProductRef">نام محصول</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" disabled="disabled" id="ProductRef" name="ProductRef" placeholder="نام محصول" type="text" value="" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                </div>

                                <div class="form-group">

                                    <label class="control-label col-md-2" for="ColorRef">رنگ</label>
                                    <div class="col-md-4">
                                        <select class="form-control " id="ColorRef" name="ColorRef">
                                            @{
                                                var color = rep.RepositoryColorManagmentDropDown();

                                                foreach (var item in color)
                                                {
                                                    <option value="@item.Id">@item.PrimaryTitle</option>
                                                }
                                            }
                                        </select>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>

                                    <label class="control-label col-md-2" for="SizeRef">سایز</label>
                                    <div class="col-md-4">
                                        <select class="form-control " id="SizeRef" name="SizeRef">
                                            @{
                                                var size = rep.RepositorySizeManagmentDropDown();

                                                foreach (var item in size)
                                                {
                                                    <option value="@item.Id">@item.SizeTitle</option>
                                                }
                                            }
                                        </select>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                    <hr/>
                                    <label class="control-label col-md-2" for="Count">تعداد</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line"  id="Count" name="Count" placeholder="" type="number" value="" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>

                                </div>

                            </div>


                        </div>
                        <div class="box-footer clearfix">
                            <div class="col-md-12 col-md-offset-9">
                                <button type="submit" class="btn btn-labeled bg-green-active"> <i class="fa fa-check-square"></i> ذخیره</button>
                                <a href="/ProductPropertyList/Index/@Session["IdProductRef"]" class="btn btn-labeled bg-red-active"> <i class="fa fa-close"></i> بازگشت</a>
                            </div>
                        </div>
                    }

                </div>


            </div>
        </div>
    </div>
</section>



