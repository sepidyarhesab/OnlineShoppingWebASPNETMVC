@using OrdersOrders.Repository.Orders

@{
    ViewBag.Title = "آدرس|Address";
    Layout = "~/Views/Layouts/_MainLayouts.cshtml";
}

<div class="row mb-5">
    <div class="col-lg-3 col-md-4 mb-md-0 mb-3 sticky-sidebar">
        <div class="sidebar-widget">
            @Html.Partial("Body/P_Panel_Right")
        </div>
    </div>

    <div class="col-lg-9 col-md-8">
        <div class="section-title mb-2">
            نشانی‌ها
        </div>
        <div class="checkout-section shadow-around">
            <div class="checkout-section-content">
                <div class="row mx-0">
                    @{

                        var idd = Guid.Parse(User.Identity.Name);
                        var results = RepAccountDashboard.RepAccountDashboardAddress(idd);
                        if (results.Count > 0)
                        {
                            foreach (var item in results)
                            {
                                <div class="col-xl-3 col-lg-4 col-sm-6 mb-3 overflow-wrap">
                                    <div class="custom-control custom-radio">
                                        <label class="custom-control-label address-select" for="customRadio1">
                                            <span class="head-address-select @item.IsPayClass">@item.IsPayTitle</span>
                                            <span>نوع آدرس:@item.Typee</span>
                                            <span>کد پستی:@item.PostalCode</span>
                                            <span>استان:@item.CityTitle</span>
                                            <span>آدرس:@item.Address</span>
                                            <a href="/Dashboard/AddressUpdate/@item.Id" class="link--with-border-bottom edit-right">
                                                ویرایش
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="/Dashboard/DeleteAddress/@item.Id" class="danger-a edit-address-btn">
                                                حذف
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </label>
                                    </div>
                                </div>
                            }
                        }
                    }
                    <div class="col-xl-3 col-lg-4 col-sm-6 mb-3">
                        <div class="custom-control custom-radio">
                            <a href="/Dashboard/AddressAdd" class="add-address">
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
@Html.Partial("Body/P_Panel_Center")

