@model IEnumerable<OrdersGeneral.ViewModels.General.VMSliders.VmMainSlidersGenerate>

@{
    ViewBag.Title = "ویرایش اسلایدر|SliderEditing";
    Layout = "~/Views/Layouts/_AdminLayouts.cshtml";
}

<section class="content-header">
    <h2>داشبورد</h2>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-lg-12 connectedSortable">
                <div class="box box-info">

                    @{
                        if (Model != null)
                        {

                            using (Html.BeginForm("EditRow", "SlidersManagement", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="box-header">
                                    <i class="fa fa-envelope"></i>
                                    <h3 class="box-title">ویرایش اسلایدر</h3>
                                </div>
                                <div class="box-body">
                                    <div class="form-horizontal">

                                        @{

                                            foreach (var sliderEdit in Model)
                                            {
                                                <input type="hidden" name="Id" id="Id" value="@sliderEdit.Id">
                                                <div class="form-group">
                                                    <label class="control-label col-md-2" for="PrimaryTitle">نام اسلایدر</label>
                                                    <div class="col-md-4">
                                                        <input class="form-control text-box single-line" id="PrimaryTitle" name="PrimaryTitle" placeholder="عنوان اصلی" type="text" value="@sliderEdit.PrimaryTitle" />
                                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                    </div>
                                                    <label class="control-label col-md-2" for="SecendaryTitle">عنوان اسلایدر دوم</label>
                                                    <div class="col-md-4">
                                                        <input class="form-control text-box single-line" id="SecendaryTitle" name="SecendaryTitle" placeholder="عنوان اصلی" type="text" value="@sliderEdit.SecendaryTitle" />
                                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="control-label col-md-2" for="Title">عکس کامپیوتر</label>
                                                    <div class="col-md-4">
                                                        <input class="form-control text-box single-line" id="FileNameDesktop" name="FileNameDesktop" placeholder="" type="file" value="@sliderEdit.FileName" />
                                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                    </div>
                                                    <label class="control-label col-md-2" for="Title">عکس موبایل</label>
                                                    <div class="col-md-4">
                                                        <input class="form-control text-box single-line" id="FileNameMobile" name="FileNameMobile" placeholder="" type="file" value="@sliderEdit.FileName" />
                                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-2" for="Title">وضعیت</label>
                                                    <div class="col-md-4">
                                                        <select class="form-control" id="IsOk" name="IsOk">
                                                            <option selected="selected" value="@sliderEdit.IsOk">فعال</option>
                                                            <option value="0">غیر فعال</option>

                                                        </select>
                                                        <span class="field-validation-valid text-danger" data-valmsg-for="Section" data-valmsg-replace="true"></span>
                                                    </div>

                                                    <label class="control-label col-md-2" for="Url">لینک</label>
                                                    <div class="col-md-4">
                                                        <input class="form-control text-box single-line" id="Url" name="Url" placeholder="لینک" type="text" value="@sliderEdit.Url" onfocusout="checkinputslider()" />
                                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-2" for="Sort">شماره مرتب سازی</label>
                                                    <div class="col-md-4">
                                                        <input class="form-control text-box single-line" id="Sort" name="Sort" placeholder="شماره مرتب سازی" type="number" onkeypress="return isNumberKey(event)" value="@sliderEdit.Sort" pattern="\D" onfocusout="checkinputmenu()" />
                                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                    </div>
                                            </div>
                                             }

                                        }

                                                </div>
                                            </div>
                                <div class="box-footer clearfix">
                                    <div class="col-md-12 col-md-offset-9">
                                        <button type="submit" class="btn btn-labeled bg-green-active"> <i class="fa fa-check-square"></i> ذخیره</button>
                                        <a href="/SlidersManagement/Index" class="btn btn-labeled bg-red-active"> <i class="fa fa-close"></i> بازگشت</a>
                                    </div>
                                </div>
                            }
                        }




                    }



                </div>
            </div>


        </div>
    </div>
</section>




