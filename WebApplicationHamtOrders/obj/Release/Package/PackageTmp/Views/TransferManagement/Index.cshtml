@model IEnumerable<OrdersGeneral.ViewModels.General.VMTransfer.VMTransferManagement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_AdminLayouts.cshtml";
}

<section class="content-header">
    <h1>
        داشبورد
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-info">
                <div class="box-header with-border ui-sortable-handle" style="cursor: move;">
                    <h3 class="box-title">باربری</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>

                    <div class="site-header__search">
                        <div class="search">

                            <form class="search__form" action="/CategoriesManagement/Index" method="post">
                                <input class="search__input" name="Search" id="Search" placeholder="جستجوی دسته بندی کافیست کلمه کلیدی را وارد کنید ..." aria-label="Site search" type="text" autocomplete="off">
                                <button class="search__button" type="submit">
                                    <svg width="20px" height="20px">
                                        <use xlink:href="/Helper/Layouts/images/sprite.svg#search-20"></use>
                                    </svg>
                                </button>
                                <div class="search__border"></div>
                                <button class="btn btn-danger" style="margin-left: -104px;" onclick="reload()">
                                    بازیابی مجدد
                                </button>
                            </form>

                        </div>

                    </div>
                    <script>

                        function reload() {
                            window.location.href = "/CategoriesManagement";
                        }
                    </script>

                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="container-fluid">
                        <a href="/TransferManagement/Create" class="btn btn-success" style="width: 80%"> افزودن &nbsp;<i class="fa fa-plus"></i></a>
                        <a class="btn btn-danger " href="/AdminDashboard" style="width: 19%">برگشت</a>
                    </div>

                    <div class="box-body">
                        <div class="table-responsive">



                            <table class="table no-margin">
                                <thead>
                                    <tr>

                                        <th>
                                            ردیف
                                        </th>
                                        <th>
                                            کد
                                        </th>
                                        <th>
                                            عنوان اول
                                        </th>
                                        <th>
                                            عنوان دوم
                                        </th>
                                        <th>
                                            باربری
                                        </th>
                                        <th>
                                            وزن
                                        </th>
                                        <th>
                                            قیمت بر وزن
                                        </th>
                                        <th>
                                            استان
                                        </th>
                                        <th>
                                            وضعیت
                                        </th>

                                        <th>ویرایش</th>
                                        <th>حذف</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model != null)
                                        {

                                            var row = 1;
                                            foreach (var mangment in Model)
                                            {
                                                <tr>

                                                    <td class="col-md-1">
                                                        @row
                                                    </td>
                                                    <td class="col-md-1 copy">
                                                        @mangment.Code
                                                    </td>

                                                    <td class="col-md-2 copy" style="font-size: 12px;">
                                                        @mangment.PrimaryTitle
                                                    </td>
                                                    <td class="col-md-2">
                                                     @mangment.SecondaryTitle 
                                                    </td>

                                                    <td class="col-md-2">
                                                        @mangment.TransferPay
                                                    </td>

                                                    <td class="col-md-2">
                                                    @mangment.Weight
                                                    </td> 
                                                    <td class="col-md-2">
                                                    @mangment.Fee 
                                                    </td>
                                                    <td class="col-md-2">
                                                      @mangment.CityTitle 
                                                    </td>
                                                    <td class="col-md-1">
                                                        <a href="/TransferManagement/ChangeStatus/@mangment.Id" class="@mangment.IsOkClass">@mangment.IsOkTitle</a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-info glyphicon glyphicon-edit" href="/TransferManagement/Edit/@mangment.Id"></a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-danger " href="/TransferManagement/Delete/@mangment.Id">×</a>
                                                    </td>
                                                </tr>
                                                row++;

                                            }

                                        }




                                    }



                                </tbody>
                            </table>





                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

