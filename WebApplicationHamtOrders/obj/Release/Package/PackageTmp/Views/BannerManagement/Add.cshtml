@using OrdersExtentions.Extensions

@{
    ViewBag.Title = "افزودن بنر جدید|AddNewBanner";
    Layout = "~/Views/Layouts/_AdminLayouts.cshtml";
}
<section class="content-header">
    <h2>داشبورد</h2>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-lg-12 connectedSortable">
                <div class="box box-info">
                    @using (Html.BeginForm("Generate", "BannerManagement", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        var random = SepidyarHesabCodeGenerator.GenerateCode("", "");
                        @Html.AntiForgeryToken()
                        <div class="box-header">
                            <i class="fa fa-envelope"></i>
                            <h3 class="box-title">افزودن بنر جدید</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-horizontal">

                                <div class="form-group">
                                    <label class="control-label col-md-2" for="Code">کد</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" disabled="disabled" id="Code" name="Code" placeholder="کد" type="text" value="@random" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>

                                    <label class="control-label col-md-2" for="Sort">شماره مرتب سازی</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="Sort" name="Sort" placeholder="شماره مرتب سازی" type="number" onkeypress="return isNumberKey(event)" value="" onfocusout="checkinputSocial()" pattern="\D" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="PrimaryTitle">عنوان اصلی</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="PrimaryTitle" name="PrimaryTitle" placeholder="عنوان اصلی" type="text" value="" onfocusout="checkinputSocial()" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                    <label class="control-label col-md-2" for="SecondaryTitle">عنوان فرعی</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="SecondaryTitle" name="SecondaryTitle" placeholder="عنوان فرعی" type="text" value="" onfocusout="checkinputSocial()" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="FileNameDesktop">عکس کامپیوتر</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="FileNameDesktop" name="FileNameDesktop" placeholder="عکس کامپیوتر" type="file" value="" onfocusout="checkinputslider()" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2" for="Url">لینک</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="Url" name="Url" placeholder="لینک" type="text" value="" onfocusout="checkinputSocial()" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>

                                    <label class="control-label col-md-2" for="Entites">محل بنر</label>
                                    <div class="col-md-4">
                                        <select class="form-control " id="Entites" name="Entites">
                                            <option value="BesideSlider">کنار اسلایدر</option>
                                            <option value="TopBanner">بنر بالایی</option>
                                            <option value="MainBanner">بنر اصلی</option>
                                            <option value="DashboardDown">پایین صفحه داشبورد</option>
                                            <option value="DashbordTop">بالای صفحه داشبورد</option>
                                        </select>
                                    </div>
                                </div>

                            </div>
                            <div class="box-footer clearfix">
                                <div class="col-md-12 col-md-offset-9">

                                    <button type="submit" class="btn btn-labeled bg-green-active" id="Submit"> <i class="fa fa-check-square"></i> ذخیره</button>
                                    <a href="/BannerManagement" class="btn btn-labeled bg-red-active"> <i class="fa fa-close"></i> بازگشت</a>
                                </div>
                            </div>

                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</section>

