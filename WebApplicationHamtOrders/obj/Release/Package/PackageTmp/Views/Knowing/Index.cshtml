@model IEnumerable<OrdersGeneral.ViewModels.General.VMKnowing.VmKnowingManagement>


@{
    ViewBag.Title = "درباره ما|AboutUs";
    Layout = "~/Views/Layouts/_MainLayouts.cshtml";
}



<div class="row mb-5">

    <div class="col-lg-12 col-md-9 order-1 order-md-2">
        <div class="row">
            <div class="col-12 mb-3">
                <div class="shadow-around">
                    <div class="px-3">
                        <!-- breadcrumb -->
                        <div class="breadcrumb py-2">
                            <nav>
                                <a href=""> خانه</a>
                                <a href="">درباره ما</a>
                            </nav>
                        </div>
                        <!-- end breadcrumb -->
                        @{
                            if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <div class="blog-card single-blog">
                                        <div class="blog-card-thumbnail">
                                            <a href="#">
                                                <img src="@item.FileName"
                                                     alt="@item.PrimaryTitle">
                                            </a>
                                        </div>
                                        <div class="blog-card-body">
                                            <p>
                                                @Html.Raw(item.SecondaryTitle)
                                            </p>
                                        </div>
                                    </div>
                                }


                            }
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
