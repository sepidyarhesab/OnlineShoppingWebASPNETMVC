
@{
    ViewBag.Title = "ورود به حساب کاربری";
    Layout = "~/Views/Layouts/_MainLayouts.cshtml";
}




<div class="page-header">
    <div class="page-header__container container">

        <div class="page-header__title">
            <div class="card mt-3">
                <h5 class="p-3">ورود به حساب کاربری</h5>
            </div>
        </div>
    </div>
</div>
<div class="block">
    <div class="container">
        <div class="card mb-0">
            <div class="card-body contact-us">
                <div class="contact-us__container">
                    <div class="row text-left btn btn-warning" dir="ltr" style="color: white !important">
                        <a href="javascript:void(0);" style="color: white !important" onclick="javascript:introJs().start();"> <i class="fas fa-question"></i> راهنما ثبت نام در سایت </a>
                    </div>
                    <div class="row">
                        <div class="col-12 col-lg-12">

                            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="form-name">نام کاربری : </label>
                                        <input type="tel" maxlength="11" max="11" id="phone" name="phone" class="form-control" placeholder="از شماره تلفن ثبت شده برای ورود استفاده کنید. " onchange="allnumeric(this);" data-step="1" data-intro="در این قسمت شماره موبایل خود را با کیبورد لاتین وارد کنید">
                                    </div>
                                    @*<div class="form-group col-md-12">
                                            <label for="form-email">کلمه عبور : </label>
                                            <input type="password" id="password" name="password" class="form-control" placeholder="کلمه عبور" dir="ltr"   data-step="1" data-intro="در این قسمت رمز عبور خود را وارد کنید">
                                        </div>*@
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-9">
                                        <button type="submit" class="btn btn-primary btn-block">ورود</button>

                                    </div>
                                    <div class="form-group col-md-3">
                                        <a href="/Register" class="btn btn-primary btn-block">ثبت نام</a>
                                    </div>
                                </div>
                            }

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function allnumeric(inputtxt) {
        var numbers = new RegExp("09(0[1-2]|1[0-9]|3[0-9]|2[0-1]|9[0-9])-?[0-9]{3}-?[0-9]{4}");
        if (inputtxt.value.match(numbers)) {
            document.getElementById("phone").style.border = "1px solid green";
            document.form1.text1.focus();
            return true;
        }
        else {
            document.getElementById("phone").style.border = "1px solid red";
            alert('شماره موبایل وارد شده صحیح نیست');
            document.form1.text1.focus();
            return false;
        }
    }
</script>
