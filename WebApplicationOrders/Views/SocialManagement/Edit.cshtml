@using OrdersGeneral.Repository.General

@model OrdersGeneral.ViewModels.General.VmSocialMedia.VmSocialMediaManagement
@{
    ViewBag.Title = "ویرایش شبکه اجتماعی";
    Layout = "~/Views/Layouts/_AdminLayouts.cshtml";
}

<section class="content-header">
    <h2>داشبورد</h2>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-lg-12 connectedSortable">
                <div class="box box-info">

                    @{
                        if (Model != null)
                        {
                            using (Html.BeginForm("Update", "SocialManagement", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="box-header">
                                    <i class="fa fa-envelope"></i>
                                    <h3 class="box-title">ویرایش شبکه اجتماعی</h3>
                                </div>
                                <div class="box-body">
                                    <div class="form-horizontal">
                                        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                                        <div class="form-group">
                                            <label class="control-label col-md-2" for="Code">کد</label>
                                            <div class="col-md-4">
                                                <input class="form-control text-box single-line" disabled="disabled" id="Code" name="Code" placeholder="کد" type="text" value="@Model.Code" />
                                                <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                            </div>

                                            <label class="control-label col-md-2" for="Sort">شماره مرتب سازی</label>
                                            <div class="col-md-4">
                                                <input class="form-control text-box single-line" id="Sort" name="Sort" placeholder="شماره مرتب سازی" type="number" onkeypress="return isNumberKey(event)"  value="@Model.Sort" onfocusout="checkinputEdit()" pattern="\D" />
                                                <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-2" for="PrimaryTitle">عنوان اصلی</label>
                                            <div class="col-md-4">
                                                <input class="form-control text-box single-line" id="Name" name="PrimaryTitle" placeholder="نام کاربر " type="text" value="@Model.PrimaryTitle" onfocusout="checkinputEdit()" />
                                                <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                            </div>
                                            <label class="control-label col-md-2" for="Url">لینک</label>
                                            <div class="col-md-4">
                                                <input class="form-control text-box single-line" id="Url" name="Url" placeholder="لینک" type="text" value="@Model.Url" onfocusout="checkinputEdit()" />
                                                <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div>
                                                <label class="control-label col-md-2" for="Classs">کلاس </label>
                                                <div class=" col-md-4">
                                                    <select class="form-control " id="Classs" name="Classs" onfocusout="checkinputEdit()">
                                                        @{
                                                            var result = RepSocialMedia.RepositoryStaticSocialClass();
                                                            if (result.Count > 0)
                                                            {
                                                                foreach (var items in result)
                                                                {
                                                                    if (items.Id ==Guid.Parse( Model.Class))
                                                                    {
                                                                        <option value="@items.Id" selected="selected" >@items.Class</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="@items.Id">@items.Class</option>
                                                                    }
                                                                }
                                                            }
                                                        }

                                                    </select>
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>

                                                </div>
                                            </div>

                                            <div>
                                                <label class="control-label col-md-2" for="Value">آیکون </label>
                                                <div class=" col-md-4">
                                                    <select class="form-control " id="Value" name="Value" onfocusout="checkinputEdit()">
                                                        @{
                                                            var resultIcon = RepSocialMedia.RepositoryStaticSocialIcon();
                                                            if (resultIcon.Count > 0)
                                                            {
                                                                foreach (var items in resultIcon)
                                                                {
                                                                    if (items.Id ==Guid.Parse( Model.SecondaryTitle))
                                                                    {
                                                                        <option value="@items.Id" selected="selected" >@items.Icon</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="@items.Id"  >@items.Icon</option>
                                                                    }

                                                                }
                                                            }
                                                        }

                                                    </select>
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>

                                                </div>
                                            </div>
                                        </div>

                                        

                                    </div>


                                </div>
                                <div class="box-footer clearfix">
                                    <div class="col-md-12 col-md-offset-9">
                                        <button type="submit" class="btn btn-labeled bg-green-active" id=""> <i class="fa fa-check-square"></i> ذخیره</button>
                                        <a href="/SocialManagement" class="btn btn-labeled bg-red-active"> <i class="fa fa-close"></i> بازگشت</a>
                                    </div>
                                </div>
                            }
                        }
                    }

                </div>


            </div>
        </div>
    </div>
</section>

