@using OrdersInventory.Repository.Inventory


@{
    ViewBag.Title = "ProductIndex";
    Layout = "~/Views/Layouts/_AdminLayouts.cshtml";
}


<section class="content-header">
    <h1>
        داشبورد
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-info">
                <div class="box-header with-border ui-sortable-handle" style="cursor: move;">
                    <h3 class="box-title"> تخفیف بر روی محصول</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="col-md-12">
                        <div class="col-md-5 mb-1">
                            <a href="/DiscountManager/CodeIndex" class=" btn btn-warning btn-block   "> با کد تخفیف</a>
                        </div>
                        <div class="col-md-5 mb-1">
                            <a href="/DiscountManager/ProductIndex" class="btn btn-info btn-block  " disabled> تخفیف بر روی محصول </a>
                        </div>
                        <div class="col-md-2">
                            <a href="/DiscountManager/index" class="btn btn-danger btn-block margin-bottom "> بازگشت</a>
                        </div>
                    </div>

                    <hr />
                    

                    <div class="box-body">
                        <div class="container-fluid">
                            <a href="/DiscountManager/ProductAdd" class="btn btn-success btn-block"> افزودن &nbsp;<i class="fa fa-plus"></i></a>
                        </div>
                        <div class="box-body">
                            <div class="table-responsive">




                                <table class="table no-margin">
                                    <thead>
                                        <tr>
                                            <th class="text-center">
                                                ردیف
                                            </th>
                                            <th class="text-center">
                                                کد
                                            </th>
                                            <th class="text-center">
                                                عنوان اول
                                            </th>
                                            <th class="text-center">
                                                درصد تخفیف
                                            </th>
                                            <th class="text-center">
                                                دسته بندی انتخابی
                                            </th>
                                            <th class="text-center">
                                                وضعیت
                                            </th>
                                            <th class="text-center">ویرایش</th>
                                            <th class="text-center">لیست محصولات</th>
                                            <th class="text-center">حذف</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @{
                                        var rep = new RepProducts();

                                            var configuration = rep.RepositoryMainProductDiscount();
                                            if (configuration.Count > 0)

                                            {
                                                var row = 1;
                                                foreach (var mangment in configuration)
                                                {
                                                    <tr>

                                                        <td class="col-md-1 text-center">
                                                            @row
                                                        </td>

                                                        <td class="col-md-1 text-center">
                                                            @mangment.Code
                                                        </td>

                                                        <td class="col-md-3 text-center" style="font-size: 12px;">
                                                            @mangment.PrimaryTitle
                                                        </td>
                                                        <td class="col-md-2 text-center">
                                                            <a>@mangment.Discount </a>
                                                        </td>
                                                        <td class="col-md- text-center" style="font-size: 12px;">
                                                            @if (@mangment.CategoriesRef == null)
                                                            {
                                                                <span class="text-danger ">
                                                                    <i class="glyphicon glyphicon-remove"></i>
                                                                </span>
                                                            }
                                                            else
                                                            {
                                                                @mangment.CategoryTitle
                                                            }
                                                        </td>
                                                        <td class="col-md-1 text-center">
                                                            @if (@mangment.IsOk)
                                                            {
                                                                <a href="/DiscountManager/ProductChangeStatus/@mangment.Id" class="btn btn-success">فعال</a>
                                                            }
                                                            else
                                                            {
                                                                <a href="/DiscountManager/ProductChangeStatus/@mangment.Id" class="btn btn-danger">غیرفعال</a>
                                                            }
                                                        </td>
                                                        <th>
                                                            <a class="btn btn-info btn-sm glyphicon glyphicon-edit" href="/DiscountManager/ProductEdit/@mangment.Id"></a>
                                                        </th>
                                                        <th>
                                                            @if (@mangment.CategoriesRef == null)
                                                            {
                                                                <a class="btn btn-success btn-sm " href="/DiscountManager/ProductSelection/@mangment.Id">انتخاب محصول</a>
                                                            }
                                                            else
                                                            {
                                                                @mangment.CategoryTitle
                                                            }
                                                        </th>
                                                        <th>
                                                            <a class="btn btn-danger btn-sm " href="/DiscountManager/ProductDelete/@mangment.Id">×</a>
                                                        </th>
                                                    </tr>
                                                    row++;

                                                }

                                            }




                                        }



                                    </tbody>
                                </table>





                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





