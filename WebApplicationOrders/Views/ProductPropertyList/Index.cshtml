
@model IEnumerable<OrdersInventory.ViewModels.Inventory.VMProduct.ViewModelProductPropertyList>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_AdminLayouts.cshtml";
}



<section class="content-header">
    <h1>
        داشبورد
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-info">
                <div class="box-header with-border ui-sortable-handle" style="cursor: move;">
                    <h3 class="box-title">موجودی محصول </h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="container-fluid">
                        <div class="col-md-12">
                            <div class="col-md-9">
                                <a href="/ProductPropertyList/Add/@Session["IdProductRef"]" class="btn btn-success btn-block"> افزودن &nbsp;<i class="fa fa-plus"></i></a>
                            </div>
                            <div class="col-md-3">
                                <a href="/ProductManagment/Index" class="btn btn-danger btn-block"> بازگشت &nbsp;<i class="fa fa-close"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">


                        <div class="table-responsive">



                            <table class="table no-margin">
                                <thead>
                                    <tr>
                                        <th>
                                            ردیف
                                        </th>
                                        <th>
                                            کد
                                        </th>
                                        <th>
                                            نام محصول
                                        </th>
                                        <th>
                                            رنگ
                                        </th>
                                        <th>
                                            سایز
                                        </th>
                                        <th>
                                            تعداد
                                        </th>
                                       
                                        <th>
                                            ویرایش
                                        </th>
                                        <th>
                                            حذف
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        
                                            var row = 1;
                                            foreach (var mangment in Model)
                                            {
                                                <tr>
                                                    <td class="col-1">
                                                        @row
                                                    </td>

                                                    <td class="col-md-2">
                                                        @mangment.Code
                                                    </td>

                                                    <td class="col-md-3" style="font-size: 12px;">
                                                        @mangment.ProductTitle
                                                    </td>
                                                    <td class="col-md-3" style="font-size: 12px;">
                                                        @mangment.ColorTitle
                                                    </td>
                                                    <td class="col-md-3" style="font-size: 12px;">
                                                        @mangment.SizeTitle
                                                    </td>
                                                    <td class="col-md-4">
                                                        @mangment.Count
                                                    </td>
                                                    <th>
                                                        <a class="btn btn-info btn-sm glyphicon glyphicon-edit" href="/ProductPropertyList/Edit/@mangment.Id"></a>
                                                    </th>
                                                    <th>
                                                        <a class="btn btn-danger btn-sm" href="/ProductPropertyList/Delete/@mangment.Id">×</a>
                                                    </th>
                                                </tr>
                                                row++;

                                            }
                                        }




                                    



                                </tbody>
                            </table>





                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





