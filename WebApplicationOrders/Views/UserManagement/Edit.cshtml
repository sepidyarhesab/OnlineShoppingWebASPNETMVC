@using OrdersGeneral.Repository.General


@{
    ViewBag.Title = "ویرایش کاربر";
    Layout = "~/Views/Layouts/_AdminLayouts.cshtml";
}

<section class="content-header">
    <h2>داشبورد</h2>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-lg-12 connectedSortable">
                <div class="box box-info">
                    
                    @{
                        if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                             using (Html.BeginForm("EditRow", "UserManagement", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-header">
                            <i class="fa fa-envelope"></i>
                            <h3 class="box-title">ویرایش کاربر</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-horizontal">
                                <input type="hidden" id="Id" name="Id" value="@item.Id" />
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="Code">کد</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" disabled="disabled" id="Code" name="Code" placeholder="کد" type="text" value="@item.Code" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>

                                    <label class="control-label col-md-2" for="PrimaryTitle">نام</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="Name" name="Name" placeholder="نام کاربر " type="text" value="@item.Name" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="PrimaryTitle">نام خانوادگی </label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="Family" name="Family" placeholder=" نام خانوادگی" type="text" value="@item.Family" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>


                                    <label class="control-label col-md-2" for="Sex">جنسیت </label>
                                    <div class=" col-md-4">
                                        <select class="form-control " id="Sex" name="Sex">
                                            <option @((item.Sex == true) ? "selected" : "") value="True" id="Sex">آقا</option>
                                            <option @((item.Sex == false) ? "selected" : "") value="False" id="Sex">خانم</option>
                                        </select>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="RoleRef">نقش </label>
                                    <div class="col-md-4">
                                        <select class="form-control " id="RoleRef" name="RoleRef">
                                            @{
                                                var category = RepUsers.RepositoryUserDropDown();

                                                foreach (var itemm in category)
                                                {
                                                    <option selected="@itemm.Id" value="@itemm.Id">@itemm.PrimaryTitle</option>
                                                }
                                            }
                                        </select>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>


                                    </div>
                                    <label class="control-label col-md-2" for="Password">رمز عبور</label>
                                    <div class="col-md-4">
                                        <input class="form-control text-box single-line" id="Password" name="Password" placeholder="رمز عبور" type="text" value="@item.Password" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div>
                                        <label class="control-label col-md-2" for="Phone">شماره تلفن</label>
                                        <div class="col-md-4">
                                            <input class="form-control text-box single-line" id="Phone" name="Phone" placeholder="شماره تلفن" type="number" value="@item.Phone" />
                                            <p class="help-block">شماره تلفن به عنوان نام کاربری محسوب می شود.</p>
                                            <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                        </div>
                                    </div>
                                    
                                    

                                </div>

                            </div>


                        </div>
                        <div class="box-footer clearfix">
                            <div class="col-md-12 col-md-offset-9">
                                <button type="submit" class="btn btn-labeled bg-green-active"> <i class="fa fa-check-square"></i> ذخیره</button>
                                <a href="/UserManagement/index" class="btn btn-labeled bg-red-active"> <i class="fa fa-close"></i> بازگشت</a>
                            </div>
                        </div>
                    }
                            }
                        }
                    }

                </div>


            </div>
        </div>
    </div>
</section>



