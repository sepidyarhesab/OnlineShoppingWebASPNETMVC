@using OrdersGeneral.Repository.General

<!-- .block-features -->
<div class="block block-features block-features--layout--boxed service-style">
    <div class="container-fluit">
        <div class="block-features__list pd-10">
            @{
                var result = RepServices.RepositoryMainServices();
                if (result.Count > 0)
                {
                    foreach (var item in result)
                    {
                        <div class="block-features__item" style="margin: 0 10px">
                            <div class="block-features__icon">
                                <img src="@item.FileName" width="48px" height="48px" alt="@item.PrimaryTitle"/>
                            </div>
                            <div class="block-features__content">
                                <div class="block-features__title">@item.PrimaryTitle</div>
                            </div>
                        </div>
                    }
                }




            }


        </div>
    </div>
</div>
<!-- .block-features / end -->
