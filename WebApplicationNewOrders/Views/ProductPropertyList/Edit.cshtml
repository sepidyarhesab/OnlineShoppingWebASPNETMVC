@using OrdersInventory.Repository.Inventory

@model IEnumerable<OrdersInventory.ViewModels.Inventory.VMProduct.ViewModelProductPropertyList>


@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Layouts/_AdminLayouts.cshtml";
}


<section class="content-header">
    <h2>داشبورد</h2>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-lg-12 connectedSortable">
                <div class="box box-info">
                    @{
                        var rep = new RepProducts();

                        if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                using (Html.BeginForm("EditRow", "ProductPropertyList", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="box-header">
                                        <i class="fa fa-envelope"></i>
                                        <h3 class="box-title">اضافه کردن موجودی</h3>
                                    </div>
                                    <div class="box-body">
                                        <div class="form-horizontal">
                                            <input type="hidden" id="Id" name="Id" value="@item.Id" />
                                            <input type="hidden" id="ProductRef" name="ProductRef" value="@item.ProductRef" />

                                            <div class="form-group">
                                                <label class="control-label col-md-2" for="Code">کد</label>
                                                <div class="col-md-4">
                                                    <input class="form-control text-box single-line" disabled="disabled" id="Code" name="Code" placeholder="کد" type="text" value="@item.Code" />
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                </div>



                                                <label class="control-label col-md-2" for="ProductRef">نام محصول</label>
                                                <div class="col-md-4">
                                                    <input class="form-control text-box single-line" disabled="disabled" id="ProductRef" name="ProductRef" placeholder="نام محصول" type="text" value="@item.ProductTitle" />
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                </div>
                                            </div>

                                            <div class="form-group">

                                                <label class="control-label col-md-2" for="ColorRef">رنگ</label>
                                                <div class="col-md-4">
                                                    <select class="form-control " id="ColorRef" name="ColorRef">
                                                        @{
                                                            var color = rep.RepositoryColorManagmentDropDown();

                                                            foreach (var colors in color)
                                                            {
                                                                <option value="@colors.Id">@colors.PrimaryTitle</option>
                                                            }
                                                        }
                                                    </select>
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                </div>

                                                <label class="control-label col-md-2" for="SizeRef">سایز</label>
                                                <div class="col-md-4">
                                                    <select class="form-control " id="SizeRef" name="SizeRef">
                                                        @{
                                                            var size = rep.RepositorySizeManagmentDropDown();

                                                            foreach (var Sizes in size)
                                                            {
                                                                <option value="@Sizes.Id">@Sizes.SizeTitle</option>
                                                            }
                                                        }
                                                    </select>
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                </div>
                                                <hr />
                                                <label class="control-label col-md-2" for="Count">تعداد</label>
                                                <div class="col-md-4">
                                                    <input class="form-control text-box single-line" id="Count" name="Count" placeholder="" type="number" value="@item.Count" />
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
                                                </div>

                                            </div>

                                        </div>


                                    </div>
                                    <div class="box-footer clearfix">
                                        <div class="col-md-12 col-md-offset-9">
                                            <button type="submit" class="btn btn-labeled bg-green-active"> <i class="fa fa-check-square"></i> ذخیره</button>
                                            <a href="/ProductPropertyList/Index/@Session["IdProductRef"]"  class="btn btn-labeled bg-red-active"> <i class="fa fa-close"></i> بازگشت</a>
                                        </div>
                                    </div>
                                }
                            }
                        }

                    }

                </div>


            </div>
        </div>
    </div>
</section>




