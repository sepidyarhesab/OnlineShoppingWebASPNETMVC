@using OrdersGeneral.Repository.General

<!-- .block-features -->
<section class="container-fluid send-section">
    <div class="container p-0">
        <div class="row">
            <div class="col-lg-11 mx-auto col-12 p-0">
                <div class="owl-carousel owl-theme owl-send">

                    @{
                        var result = RepServices.RepositoryMainServices();
                        if (result.Count > 0)
                        {
                            foreach (var item in result)
                            {
                                <div class="item">
                                    <a href="#" class="thumbnail thum-send">
                                        <i class="img-send"><img src="@item.FileName" alt="@item.PrimaryTitle"></i>
                                        <div class="desc-send">
                                            <div class="title-send">
                                                <div class="d-block"><b>@item.PrimaryTitle </b></div>
                                                <div class="d-block">@item.SecendryTitle</div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</section>
